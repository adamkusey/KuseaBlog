@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <meta name="robots" content="noindex, nofollow"/>
    <title>Manage Posts, Categories and Tags</title>

    <!-- jquery library -->
    <script src="@Url.Content("~/Content/jqueryui/js/jquery-1.8.3.js")"></script>

    <!-- jquery ui library -->
    <script src="@Url.Content("~/Content/jqueryui/js/jquery-ui-1.9.2.custom.min.js")"></script>
    <link href="@Url.Content("~/Content/jqueryui/css/sunny/jquery-ui-1.9.2.custom.min.css")" rel="stylesheet" />

    <!-- jqgrid -->
    <link href="@Url.Content("~/Scripts/jqGrid/css/ui.jqgrid.css")" rel="stylesheet" />
    <script src="@Url.Content("~/Scripts/jqGrid/js/jquery.jqGrid.min.js")"></script>
    <script src="@Url.Content("~/Scripts/jqGrid/js/i18n/grid.locale-en.js")"></script>

    <!-- tinyMCE -->
    <script src="@Url.Content("~/Scripts/tiny_mce/tiny_mce.js")"></script>

    <link href="@Url.Content("~/Content/admin.css")" rel="stylesheet" />
    <script src="@Url.Content("~/Scripts/admin.js")"></script>

</head>
<body>

    <!-- logout link -->
    <div style="text-align: right; margin-bottom: 5px;">
        @Html.ActionLink("logout", "Logout")
    </div>

    <h2>Manage Posts, Categories and Tags</h2>

    <div id="tabs">
        <ul>
            <li><a href="#tab-posts">Posts</a></li>
            <li><a href="#tab-cats">Categories</a></li>
            <li><a href="#tab-tags">Tags</a></li>
        </ul>
        <div id="tab-posts" class="tab">
            <table id="tablePosts" class="grid">
            </table>
            <div id="pagerPosts" class="pager">
            </div>
        </div>
        <div id="tab-cats" class="tab">
            <table id="tableCats" class="grid">
            </table>
            <div id="pagerCats" class="pager">
            </div>
        </div>
        <div id="tab-tags" class="tab">
            <table id="tableTags" class="grid">
            </table>
            <div id="pagerTags" class="pager">
            </div>
        </div>
    </div>
</body>
</html>
