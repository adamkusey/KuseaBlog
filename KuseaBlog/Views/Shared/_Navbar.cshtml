@model KuseaBlog.Models.WidgetViewModel

<div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">

    @Html.Partial("_NavbarCategories", Model.Categories)

    @using (Html.BeginForm(
                            "Search",           // action
                            "Blog",             // controller
                            FormMethod.Get,     // method
                            new { id = "search-form", @class = "navbar-form navbar-right" })) // html attributes
    {
        <div class="form-group">
            @Html.TextBox("s", null, new { @class = "form-control", @placeholder = "Search" })
        </div>
        <input type="submit" class="btn btn-default" value="Search">
    }

</div>