@model KuseaBlog.Core.Objects.Post



<div class="panel panel-default">
    <div class="panel-body">
        <a href="@Url.Action("post", "blog", 
                        new {
                                year = Model.PostedOn.Year,
                                month = Model.PostedOn.Month,
                                day = Model.PostedOn.Day,
                                title = Model.UrlSlug
                            } )" class="thumbnail" style="float: left; margin: 15px;">
            <img id="post-thumbnail" src="@Url.Content("~/Content/Images/tilebulb.jpg")" />
        </a>



        <div class="post">
            <div class="post-meta">
                <div class="row">

                    <!--Heading-->
                    <div class="post-title">
                        <h2>@Html.PostLink(Model)</h2>
                    </div>

                    <!--Category-->
                    <div class="post-category">
                        <span>Category: </span>@Html.CategoryLink(Model.Category)
                    </div>

                    <!--Tags-->
                    <div class="post-tags">
                        <span>Tags:</span>@Helpers.Tags(Html, Model.Tags)
                    </div>

                    <!-- Disqus comment count -->
                    <div class="no-of-comments">
                        <a href="@string.Format("{0}#disqus_thread", Model.Href(Url))"></a>
                    </div>

                    <!--Posted date-->
                    <div class="posted-date">
                        @Model.PostedOn
                    </div>

                     @Html.Partial("_AddThis")

                </div>

               

                <div class="row">

                    <!--Short Description-->
                    <div class="post-body">
                        @Html.Raw(Model.ShortDescription)

                        @Html.ActionLink(">>>", "post", "blog",
                            new
                            {
                                year = Model.PostedOn.Year,
                                month = Model.PostedOn.Month,
                                day = Model.PostedOn.Day,
                                title = Model.UrlSlug
                            },
                            new { title = "continue",
                                    @class = "continue-post"}
                        )
                    </div>

                </div>

            </div>

        </div>




    </div>
</div>
