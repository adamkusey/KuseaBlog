<!DOCTYPE html>

<html style="position:relative;min-height:100%;">
<head>
    <meta name="viewport" content="width=device-width" />
    <meta name="keywords" content="@(ViewBag.Keywords ?? System.Configuration.ConfigurationManager.AppSettings["MetaKeywords"])" />
    <meta name="description" content="@(ViewBag.Description ?? System.Configuration.ConfigurationManager.AppSettings["MetaDescription"])"/>
    <meta name="author" content="@System.Configuration.ConfigurationManager.AppSettings["Author"]"/>

    <title>@ViewBag.Title</title>

    <link rel="stylesheet" href="@Url.Content("~/Content/bootstrap-spacelab.min.css")">
    <link rel='stylesheet' href="@Url.Content("~/Content/site.css")">
</head>
<body style="background-color:rgb(0, 76, 82);margin-bottom:64px;">
    <header class='container'>
        <nav class="navbar navbar-default" role="navigation">
            <div class="container-fluid">
                <!-- Brand and toggle get grouped for better mobile display -->
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
                        <span class="sr-only">Toggle navigation</span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    @Html.ActionLink("kusea", "Posts", null, new { @class="navbar-brand"})
                </div>

                @Html.Action("Navbar")
            </div>
        </nav>
    </header>

    <section id='body' class='container'>
        <div class="col-lg-2 col-md-2 col-sm-2" style="padding: 0;">
            <img src="@Url.Content("~/Content/Images/kuseaLogoVertical.png")" class="visible-lg hidden-md hidden-xs hidden-sm" style="float: right;">

            <img src="@Url.Content("~/Content/Images/kuseaLogoHorizontal.png")" class="visible-xs visible-sm hidden-lg visible-md" style="float: left;">
        </div>
        <section id="main" style="background-color:rgb(243, 243, 243); max-width: 800px; border-left: 1px solid #e3e3e3; border-right: 1px solid #e3e3e3; float: left; padding-bottom: 15px;">
            <div id='content' class='col-lg-12' style="padding-top: 15px; padding-bottom: 15px;">

                @RenderBody()

                @Html.Action("Sidebars")

            </div>

        </section>
    </section>

    <footer>
        <nav class="navbar navbar-default" style="position:absolute;bottom:0;width:100%;margin: 15px 0 0 0;">
            <div class="container">
                <p>Copyright @DateTime.Now.Year Kusea All Rights Reserved</p>
            </div>
        </nav>
    </footer>

    <!--scripts -->
    <script src="@Url.Content("~/Scripts/jquery-2.1.1.min.js")"></script>
    <script src="@Url.Content("~/Scripts/bootstrap.min.js")"></script>
    <script src="@Url.Content("~/Scripts/app.js")"></script>
</body>
</html>
